#include <iostream>

using namespace std;

//задача: сказать, сколько разрядов в заданном числе, и назвать первую цифру числа//

//принцип: отделяем каждый раз по одному разряду с конца и ведём счёт//

int Schet(long int a, int i, long int b)                        //ошибка: маленький инт был взят//
{
    i = 0;
    do
    {
        cout << "круг "; cout << i + 1 << endl;
        b = a;                                                  //Ошибка = присвоить б ДО изменений а//
        a = a / 10;
        i = i + 1;
        cout << a << ", ";
        cout << i;
        cout << endl;
    }
    while (a>0);                                                //Ошибка = если a>10, а не a>0, то не учитывается последний разряд//
    cout << "Количество разрядов в заданном числе = ";
    cout << i;
    cout << "Первая цифра числа = " << b;
    return i;
} 

int main()
{
    long int a; int i; long int b;
    cout << "Введите число с клавиатуры:" << endl;
    cin >> a;
    Schet(a, i, b);
}
