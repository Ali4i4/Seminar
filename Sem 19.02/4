#include <iostream>

using namespace std;

//задача: назвать цифру определённого разряда числа//

//принцип: дано число a и искомый разряд цифры n, делать цикл пока перменная подсчёта i не станет равна n//
//при этом выполняя деление на 10, концом которого станет деление с остатком на 10//

int Count(long int a, int i, int n)
{
    i = 1;              //Ошибка =  начало работы с циклом - находимся в первом разряде, которые при первом же прогоне отсекаем и переходим ко второму//
    while (i!=n) 
    {
        a = a / 10;
        i = i + 1;
    }
    a = a % 10;
    cout << "Ответ = " << a;
    return a;
}

int main()
{
    int n; int i; long int a;
    cout << "Введите число a = "; 
    cin >> a; cout << endl;
    cout << "Назовите желаемый разряд ";
    cin >> n;
    Count (a, i, n);
}
